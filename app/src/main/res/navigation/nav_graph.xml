<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/scanListFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.xpl0t.scany.ui.page.camera.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_improveFragment"
            app:destination="@id/improveFragment" />
        <argument
            android:name="scanId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/improveFragment"
        android:name="com.xpl0t.scany.ui.page.improve.ImproveFragment"
        android:label="ImproveFragment" >
        <argument
            android:name="scanId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/scanListFragment"
        android:name="com.xpl0t.scany.ui.scanlist.ScanListFragment"
        android:label="ScanListFragment" >
        <action
            android:id="@+id/action_scanListFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_scanListFragment_to_reorderPagesFragment"
            app:destination="@id/reorderPagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/reorderPagesFragment"
        android:name="com.xpl0t.scany.ui.reorderpages.ReorderPagesFragment"
        android:label="ReorderPagesFragment" >
        <argument
            android:name="scanId"
            app:argType="integer" />
    </fragment>
</navigation>